{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "emitDeclarationOnly": true,

    /* Path mappings for internal packages */
    "baseUrl": ".",
    "paths": {
      "@sagak/core/*": ["./packages/core/src/*"],
      "@sagak/editor/*": ["./packages/editor/src/*"],
      "@sagak/plugins/*": ["./packages/plugins/src/*"],
      "@sagak/ui/*": ["./packages/ui/src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Enable declaration generation for composite projects */
    "declaration": true,
    "declarationMap": true
  },
  "files": [],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/editor" },
    { "path": "./packages/plugins" },
    { "path": "./packages/ui" }
  ]
}
