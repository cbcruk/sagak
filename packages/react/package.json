{
  "name": "sagak-editor",
  "version": "0.1.0",
  "description": "A modern, feature-rich WYSIWYG editor for React",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles": "./src/styles/index.css",
    "./styles.css": "./src/styles/index.css"
  },
  "files": [
    "dist",
    "src/styles",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "editor",
    "wysiwyg",
    "rich-text",
    "react",
    "contenteditable",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/sagak-editor.git",
    "directory": "packages/react"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "lucide-react": "^0.562.0",
    "sagak-core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "8",
    "@storybook/react": "8",
    "@storybook/react-vite": "8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/browser": "3.2.4",
    "playwright": "^1.57.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "storybook": "8",
    "tsup": "^8.4.0",
    "typescript": "~5.9.3",
    "vite": "^6.0.0",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^2.0.2"
  }
}
